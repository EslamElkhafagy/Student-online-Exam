<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="#"
            android:id="@+id/num"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/maintxt"
            android:layout_toLeftOf="@+id/txt1"
            android:layout_toStartOf="@+id/txt1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/maintxt"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/num"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rd1"
            android:layout_below="@+id/num"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt1"
            android:layout_alignTop="@+id/rd1"
            android:layout_toEndOf="@+id/rd1"
            android:layout_toRightOf="@+id/rd1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rd2"
            android:checked="false"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt2"
            android:layout_alignBottom="@+id/rd2"
            android:layout_toRightOf="@+id/rd2"
            android:layout_toEndOf="@+id/rd2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rd3"
            android:layout_below="@+id/rd2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt3"
            android:layout_alignBottom="@+id/rd3"
            android:layout_toRightOf="@+id/rd2"
            android:layout_toEndOf="@+id/rd2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rd4"
            android:layout_below="@+id/rd3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:checked="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt4"
            android:layout_below="@+id/txt3"
            android:layout_toRightOf="@+id/rd3"
            android:layout_toEndOf="@+id/rd3" />


    </RelativeLayout>


</LinearLayout>